<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Dashboard</title>
</head>
<body style="background: url(https://images.pexels.com/photos/133953/pexels-photo-133953.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1);background-position: center; background-size: cover;">
    <nav class="navbar navbar-dark  justify-content-between" style="background:rgba(8, 36, 62, 0.826);">
        <a class="navbar-brand text-white" style="margin-left: 10px;">ADMIN PANEL</a>

        <a href="/admin/new-user" class="btn btn-outline-info">CREATE USER</a>
        <form style="margin-right: 10px; display: flex; align-items: center; justify-content: space-between; flex-direction: row; ">
            <input type="text" placeholder="Search Here" style="text-indent: 5px; margin-right: 5px; display: flex; align-items: center; justify-content:center; flex-direction: row;" name="search">
            <input  type="submit" style=" height: 30px; display: flex; align-items: center; justify-content:center; flex-direction: column;" class="btn btn-info"  value="Search">
        </form>        
    </nav>   

    <table class="table">
        <thead class="thead-dark">
            <tr style="background: rgba(165, 145, 224, 0.701);">
                <th scope="col">Names</th>
                <th scope="col">Email</th>
                <th scope="col">Mobile</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody style="background: rgba(255, 255, 255, 0.748);">
            <% if(users.length> 0){

                for(let i=0;i<users.length;i++){ %>
                    <tr>
                        <td>
                            <%= users[i].name %>
                        </td>
                        <td>
                            <%= users[i].email %>
                        </td>
                        <td>
                            <%= users[i].mobile%>mnju
                        </td>
                        <td>
                            <a href="/admin/edit-user?id=<%= users[i]._id %>" class="btn btn-primary">Edit</a>
                            <a href="/admin/delete-user?id=<%= users[i]._id %>" class="btn btn-primary">Delete</a>
                        </td>
                    </tr>
                    <% } } else{ %>
                        <tr>
                            <td colspan="5">users not found </td>
                        </tr>
                        <% } %>
        </tbody>
    </table>
    <a href="/admin/home" class="btn btn-secondary">Go Home</a>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>